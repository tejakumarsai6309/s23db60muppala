extends layout

block content
  h1= title
  if (toShow == null)
    h2 No instance to delete
  else
  - let vehicleid = toShow._id
  - let vehicleBrand = toShow.Brand
  - let vehicleColor = toShow.Color
  - let vehicleYear = toShow.Year
  - let actionid = "/resource/vehicle/" + vehicleid

    script.
      let actionid = "#{actionid}"

    div
      div.row
        div(class='vehicleAttr mr-3') vehicle ID is:
        div #{vehicleid}
      div.row
        div(class='vehicleAttr mr-3') vehicle Brand is:
        div #{Brand}
      div.row
        div(class='vehicleAttr mr-3') vehicle Color is:
        div #{Color}
      div.row
        div(class='vehicleAttr mr-3') vehicle Year is:
        div #{Year}

      button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
      button(class="btn btn-secondary m-2" onclick="cancel()") Cancel

    script.
      function cancel() {
        // Go back to the home page for the costume collection
        window.location.href='/vehicle'
      }

    script.
      function deleteOnid() {
        console.log("starting delete");
        // delete first
        fetch(actionid, {
          method: 'DELETE' // Don't need a body for the delete
        }).then((resp) => {
          return resp.json(); // or resp.text() or whatever the server sends
        }).then((body) => {
          alert("Delete succeeded");
          window.location.href='/vehicle';
          // TODO handle body
        }).catch((error) => {
          // TODO handle error
          alert("Delete failed " + error );
        });
      }